{
    "name": "fonil/dockerized-php",
    "type": "project",
    "license": "MIT",
    "description": "A skeleton to build containerized microservices with Docker and based on PHP",
    "keywords": ["skeleton", "docker", "nginx", "php", "composer", "phpunit", "php-cs-fixer", "phpmetrics", "phpstan", "paratest", "infection", "pcov", "php-parallel-lint", "php-result-printer"],
    "authors": [
        {
            "name": "Alcides Ramos",
            "email": "info@alcidesramos.com",
            "homepage": "https://alcidesramos.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/fonil/dockerized-php/issues",
        "source": "https://github.com/fonil/dockerized-php"
    },
    "require": {
        "php": "^8.0",
        "caseyamcl/guzzle_retry_middleware": "^2.8",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "brianium/paratest": "^6.5",
        "codedungeon/phpunit-result-printer": "^0.32.0",
        "infection/infection": "^0.26.13",
        "nunomaduro/phpinsights": "^2.4",
        "php-parallel-lint/php-console-color": "^1.0",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UnitTests\\": "tests/Unit"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1.12"
        },
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
